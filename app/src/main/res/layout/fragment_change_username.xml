<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_border"
        android:elevation="5dp">

        <TextView
            android:id="@+id/someText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/malir"
            android:layout_marginTop="20sp"
            android:text="Change Required in Username!"/>
        <EditText
            android:id="@+id/newUserName"
            android:layout_width="288dp"
            android:layout_below="@+id/someText"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/ravenscroft"
            android:hint="New User Name"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="25sp" />

        <Button
            android:id="@+id/changeNameButton"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newUserName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="#22313F"
            android:fontFamily="@font/ravenscroft"
            android:text="Change"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </RelativeLayout>

</RelativeLayout>