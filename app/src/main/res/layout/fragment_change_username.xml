<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_border"
        android:elevation="5dp">

        <TextView
            android:id="@+id/changeUsernameLabel"
            android:fontFamily="@font/josefina"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Username"/>
        <View
            android:id="@+id/justaline"
            android:layout_marginTop="30sp"
            android:layout_width="200sp"
            android:layout_below="@id/changeUsernameLabel"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />
        <EditText
            android:id="@+id/newUserName"
            android:layout_width="match_parent"
            android:elevation="3sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:background="@drawable/background_border_line"
            android:padding="10sp"
            android:ems="10"
            android:fontFamily="@font/oswald"

            android:layout_below="@+id/justaline"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorWhite"
            android:hint="New User Name"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />

        <View
            android:id="@+id/justaline2"
            android:layout_width="200sp"
            android:layout_height="2dp"
            android:layout_below="@id/newUserName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@color/colorBlack" />

        <Button
            android:id="@+id/changeNameButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/justaline2"
            android:elevation="3sp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorBlack"
            android:background="@drawable/background_border_line"
            android:fontFamily="@font/ravenscroft"
            android:text="Change"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </RelativeLayout>

</RelativeLayout>