<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="20sp">

    <RelativeLayout
        android:id="@+id/commentPostCardCont"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentProfilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/defaultpic"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="3dp"
            tools:ignore="NotSibling" />
    <TextView
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:id="@+id/commentAuthor"
        android:layout_toEndOf="@+id/commentProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="User Name" />
        <TextView

            android:layout_toEndOf="@+id/commentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="5sp"
            android:text="."/>
    <TextView
        android:layout_marginTop="5sp"
        android:id="@+id/commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/commentAuthor"
        android:layout_marginStart="10sp"
        android:textSize="12sp"
        android:text="Comment Time"/>
    <TextView
        android:layout_marginStart="10sp"
        android:id="@+id/commentDetail"
        android:layout_toEndOf="@+id/commentProfilePic"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/commentAuthor"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment Text" />
        <TextView
            android:id="@+id/commentUpvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefina"
            android:layout_marginStart="5sp"
            android:layout_marginTop="22sp"
            android:textSize="13sp"
            android:layout_toEndOf="@id/upVoteComment"
            android:layout_below="@+id/commentDetail"
            android:text="50"/>
        <TextView
            android:id="@+id/commentDownvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefina"
            android:textSize="13sp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="22sp"
            android:layout_toEndOf="@id/downVoteComment"
            android:layout_below="@+id/commentDetail"
            android:text="100"/>
        <ImageButton
            android:id="@+id/upVoteComment"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:layout_below="@+id/commentDetail"
            android:layout_toEndOf="@+id/commentProfilePic"
            android:layout_width="30sp"
            android:tint="@color/colorGrey"
            android:src="@drawable/ic_upvote"
            android:layout_height="30sp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/downVoteComment"
            android:layout_marginTop="20sp"
            android:layout_marginStart="15sp"
            android:layout_below="@+id/commentDetail"
            android:layout_toEndOf="@+id/commentUpvotes"
            android:layout_width="30sp"
            android:src="@drawable/ic_down_vote"
            android:tint="@color/colorGrey"
            android:layout_height="30sp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            android:id="@+id/replyToComment"
            android:layout_marginTop="20sp"
            android:layout_marginStart="25sp"
            android:layout_below="@+id/commentDetail"
            android:layout_toEndOf="@+id/commentDownvotes"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_chat"
            android:backgroundTint="@color/colorGrey"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>
    <View
        android:id="@+id/justaline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/commentPostCardCont"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrey" />
</RelativeLayout>