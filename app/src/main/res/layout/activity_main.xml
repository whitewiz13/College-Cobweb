<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/loginLabel"
            android:layout_marginTop="65sp"
            android:background="@drawable/background_border_line"
            android:elevation="6sp"
            android:padding="10sp"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mainCollegeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:text="@string/cuhpfull"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="100px" />
        <TextView
            android:id="@+id/lg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="@string/logintocontinue"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_below="@+id/mainCollegeText"
            android:textSize="50px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15sp"
            android:id="@+id/loginEmail"
            android:layout_below="@+id/loginLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout"
                android:layout_width="wrap_content"
                android:padding="5sp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                android:background="@drawable/background_border_line"
                android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/editText"
                android:paddingBottom="10sp"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dept"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_profile"
                android:background="@null"
                android:ems="10"
                android:hint="@string/enteremail"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorBlack"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:elevation="3sp"
                android:background="@drawable/background_border_line"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_input_layout">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_marginBottom="10sp"
                    android:layout_width="288dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rname"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:backgroundTint="@color/colorBlack"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_input_layout2"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/background_border_line"
                android:backgroundTint="@color/colorBlack"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/ravenscroft"
                android:text="Sign In"
                android:textSize="25sp" />
            <Button
                android:id="@+id/skip"
                android:elevation="3sp"
                android:layout_marginBottom="15sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/ravenscroft"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/submit"
                android:layout_height="wrap_content"
                android:background="@drawable/background_border_line"
                android:text="SKIP" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chooseLoginOption"
            android:layout_below="@+id/loginEmail"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/justaline"
                android:layout_marginTop="10sp"
                android:layout_width="200sp"
                android:layout_centerHorizontal="true"
                android:layout_height="2dp"
                android:background="@color/colorBlack" />
            <RelativeLayout
                android:layout_marginBottom="10sp"
                android:layout_below="@+id/justaline"
                android:layout_width="wrap_content"
                android:padding="10sp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

               <android.support.design.widget.FloatingActionButton
                   android:id="@+id/googleSign"
                   android:layout_marginBottom="10sp"
                   android:layout_marginStart="10sp"
                   android:src="@drawable/google"
                   android:tint="@color/colorWhite"
                   android:backgroundTint="@color/colorBlack"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
                <!---
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:layout_toEndOf="@+id/googleSign"
                android:src="@drawable/facebook"
                android:id="@+id/fbSign"
                android:layout_marginStart="20sp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/gitSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:src="@drawable/git"
                    android:tint="@color/colorWhite"
                    android:layout_toEndOf="@+id/fbSign"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/git" /> -->
        </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooseLoginOption"
            android:layout_centerHorizontal="true"
            android:transitionName="robot"
            android:clickable="true"
            android:textStyle="bold"
            android:focusable="true"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/oswald"
            android:text="New User? Sign Up!"
            android:textSize="@dimen/bottom_text" />
        <TextView
            android:id="@+id/forgotpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register"
            android:text="Forgot Password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/bottom_text"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"/>

        <ProgressBar
            android:layout_marginTop="30sp"
            android:id="@+id/progressBBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorBlack"
            android:layout_gravity="start"
            android:visibility="gone" />
    </RelativeLayout>
 </android.support.v4.widget.NestedScrollView>