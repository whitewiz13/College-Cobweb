<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_border"
        android:elevation="5dp">
        <TextView
            android:id="@+id/createForum"
            android:fontFamily="@font/josefina"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Forum Post"/>
        <View
            android:id="@+id/justaline"
            android:layout_marginTop="10sp"
            android:layout_width="200sp"
            android:layout_below="@id/createForum"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />
        <EditText
            android:id="@+id/forumName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/justaline"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20sp"
            android:background="@drawable/background_border_line"
            android:elevation="3sp"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Enter Forum Name"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/forumDetail"
            android:textStyle="bold"
            android:layout_width="288dp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:padding="10sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forumName"
            android:background="@drawable/background_border_line"
            android:elevation="3sp"
            android:fontFamily="@font/oswald"
            android:hint="Enter Forum Detail"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
        <View
            android:id="@+id/justaline2"
            android:layout_marginTop="25sp"
            android:layout_width="200sp"
            android:layout_below="@id/forumDetail"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/justaline2"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addForumImage"
                android:layout_width="40sp"
                android:layout_toEndOf="@+id/forumEnter"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:layout_height="40sp"
                android:background="@drawable/add_image" />
            <Button
                android:id="@+id/forumEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                android:backgroundTint="@color/colorBlack"
                android:background="@drawable/background_border_line"
                android:fontFamily="@font/ravenscroft"
                android:text="Add Event"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>