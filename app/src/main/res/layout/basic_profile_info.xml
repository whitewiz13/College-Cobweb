<RelativeLayout android:layout_width="match_parent"
    android:layout_height="315dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_margin="10dp"
    android:background="@drawable/background_border"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pfImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/defaultpic"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="3dp" />

    <EditText
        android:id="@+id/myBasicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myBasicRoll"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:layout_toEndOf="@+id/pfImageView"
        android:fontFamily="@font/ravenscroft"
        android:text="Uname"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/myBasicRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myBasicDept"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:fontFamily="@font/ravenscroft"
        android:text="RollNUmber"
        android:textAlignment="viewStart"
        android:layout_toEndOf="@+id/pfImageView"
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/myBasicDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:fontFamily="@font/ravenscroft"
        android:text="Dept"
        android:textAlignment="textStart"
        android:textColor="@color/colorBlack"
        android:layout_toEndOf="@+id/pfImageView"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:enabled="false"
        android:fontFamily="@font/ravenscroft"
        android:text="Basic Info"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="27sp" />

    <View
        android:id="@+id/justaline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="61dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/ravenscroft"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="58dp"
        android:layout_marginStart="25dp"
        android:text="About " />

    <EditText
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="-58dp"
        android:enabled="false"
        android:text="Stuff about you!" />

    <Button
        android:id="@+id/Editbutton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edit" />
</RelativeLayout>