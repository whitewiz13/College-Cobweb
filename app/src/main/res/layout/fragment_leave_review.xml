<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30sp"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_border_line"
        android:elevation="5dp">
        <TextView
            android:id="@+id/writeReviewLabel"
            android:fontFamily="@font/josefina"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Review"/>
        <View
            android:id="@+id/justaline"
            android:layout_marginTop="10sp"
            android:layout_width="200sp"
            android:layout_below="@id/writeReviewLabel"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />

        <EditText
            android:id="@+id/actualReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/justaline"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20sp"
            android:background="@drawable/background_border_line"
            android:elevation="3sp"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Your Review"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_below="@+id/actualReviewText"
            android:id="@+id/realReviewStars"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/leaveStarFirst"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:tint="@color/colorGold"
                android:src="@drawable/ic_star"
                android:background="?attr/selectableItemBackgroundBorderless" />
            <ImageButton
                android:id="@+id/leaveStarSecond"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star"
                android:tint="@color/colorGrey" />
            <ImageButton
                android:id="@+id/leaveStarThird"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star"
                android:tint="@color/colorGrey" />
            <ImageButton
                android:id="@+id/leaveStarFourth"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star"
                android:tint="@color/colorGrey" />
            <ImageButton
                android:id="@+id/leaveStarFifth"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star"
                android:tint="@color/colorGrey" />
        </LinearLayout>
        <View
            android:id="@+id/justaline2"
            android:layout_marginTop="25sp"
            android:layout_width="200sp"
            android:layout_below="@id/realReviewStars"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/justaline2"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submitReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                android:backgroundTint="@color/colorBlack"
                android:background="@drawable/background_border_line"
                android:fontFamily="@font/ravenscroft"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>