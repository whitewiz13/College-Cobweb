<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/userProfileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userProfileImageAct"
            android:layout_below="@id/userProfileToolbar"
            android:layout_width="157dp"
            android:layout_height="154dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:src="@drawable/loadme"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="3dp" />

        <RelativeLayout
            android:id="@+id/userBasicAct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/userProfileImageAct"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/colorWhite"
            android:elevation="3dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/userNameAct"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:fontFamily="@font/ravenscroft"
                android:textSize="@dimen/eventtext"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="UserName" />

            <View
                android:id="@+id/justaline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/userNameAct"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack" />

            <View
                android:id="@+id/justaline3"
                android:layout_width="match_parent"

                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/colorPrimaryDark" />

            <View
                android:id="@+id/justaline4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/userDeptAct"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/userRnoAct"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ravenscroft"
                android:textSize="@dimen/eventtext"
                android:layout_below="@+id/userNameAct"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="UserRollNumber" />

            <TextView
                android:id="@+id/userDeptAct"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ravenscroft"
                android:textSize="@dimen/eventtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userRnoAct"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="UserDepartment" />
            <TextView
                android:id="@+id/userAboutAct"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ravenscroft"
                android:textSize="@dimen/eventtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userDeptAct"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="UserAbout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/otherStuffAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userBasicAct"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_border"
            android:elevation="3dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/postsTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Posts" />
            <Button
                android:id="@+id/sendFirstMessage"
                android:layout_below="@+id/postsTextview"
                android:layout_marginTop="20sp"
                android:text="Message"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>