<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/item_fall_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/josefina</item>
    </style>
    <style name="ToolbarThemeAppBar">
        <item name="android:fontFamily">@font/josefina</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorYes</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.MyNoActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.MyNoActionBarTrans">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="MyProgressBarRectangle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@xml/progress</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">200dp</item>
    </style>
    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
